# Configuration des variables d'environnement
# Copiez ce fichier vers .env.local et remplissez avec vos vraies valeurs

# Configuration email (pour le formulaire de contact)
MAIL_TO_ADDRESS=your-email@example.com
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-username@example.com
MAIL_PASSWORD=your-password-here

# Configuration de sécurité
NEXT_PUBLIC_SECURE_COOKIES=true
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_HSTS_ENABLED=true

# Configuration du serveur
NEXT_PUBLIC_BASE_URL=https://yourdomain.com
NEXT_PUBLIC_ENVIRONMENT=production

# Configuration des cookies sécurisés
NEXT_PUBLIC_COOKIE_SECURE=true
NEXT_PUBLIC_COOKIE_SAMESITE=Strict
NEXT_PUBLIC_COOKIE_HTTPONLY=true

# Configuration du cache
NEXT_PUBLIC_CACHE_MAX_AGE=31536000
NEXT_PUBLIC_CACHE_IMMUTABLE=true 